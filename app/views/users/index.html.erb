<h1 class='text-center pt-4 mb-4'>All Customers</h1>
<div class='container'>
<div class='row'>
<% @users.each_slice(3) do |user| %>
    <% user.each do |users| %>
      <div class='col-lg-4 col-md-6 mt-2 mb-4'>
      <div class='card shadow'>
        <div class='card-body ml-2'>
          <h4 class='card-title'><%= link_to users.fname, user_path(users) %></h4><hr>
          <p class='card-text'><b>Email: </b><%= users.email %></p>
          <p class='card-subtitle mb-2 text-muted'>
            <% if users.dname.present? %>
              <b>DisplayName: </b><%= users.dname %>
            <%else%>
              <b>DisplayName: </b><span>Not given..</span>
            <%end%>
          </p><hr>

        </div>
      </div>
      </div>
    <% end %>
<% end %>
</div>
</div>
