<div class="main mt-5 mb-5">
  <section class="edit">
    <div class="container-signup">
      <div class="signup-content shadow">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <h2 class='form-title'>Edit <%= resource_name.to_s.humanize %></h2>
           <div class="form-group">
              <%= f.text_field :fname, placeholder: 'Enter Full Name', class: 'form-input'%>
          </div>

          <div class="form-group">
            <%= f.text_field :dname, placeholder: 'Enter display name(optional)', class: 'form-input'%>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input'%>
          </div>

          <div class="form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, placeholder: "(#{@minimum_password_length} characters minimum)" , class: 'form-input'%>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, placeholder: "Confirm your password" ,class: 'form-input'%>
          </div>

          <div class="form-group">
            <%= f.label :current_password %><br />
            <%= f.password_field :current_password, placeholder: "(Enter current password to confirm your changes)",class: 'form-input' %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: 'signup-btn mt-3 mb-4' %>
          </div>
        <% end %>
        <%= link_to "Back to Main", :back %>
      </div>
    </div>
  </section>
</div>
