<div class='main mt-5 mb-5'>
  <section class='signup'>
    <div class='container-signup'>
      <div class='signup-content shadow'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render 'devise/shared/error_messages', resource: resource %>
          <h2 class='form-title'>SignUp User</h2>
          <div class='form-group'>
              <%= f.text_field :fname, placeholder: 'Enter Full Name', class: 'form-input'%>
          </div>
          <div class='form-group'>
            <%= f.text_field :dname, placeholder: 'Enter display name(optional)', class: 'form-input'%>
          </div>
          <div class='form-group'>
            <%= f.email_field :email, autofocus: true, placeholder: 'Enter valid email', class: 'form-input' %>
          </div>
          <div class='form-group'>
            <%= f.password_field :password, placeholder: "Enter password (#{@minimum_password_length} characters minimum)", class: 'form-input' %>
          </div>
          <div class='form-group'>
            <%= f.password_field :password_confirmation, placeholder: 'Re-Enter password', class: 'form-input' %>
          </div>
          <div class='form-group'>
            <%= f.submit 'Sign up', class:'signup-btn mt-3 mb-4'%>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
