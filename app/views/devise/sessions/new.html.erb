<div class="main mt-5 mb-5">
  <section class="signup">
    <div class="container-signup">
      <div class="signup-content shadow">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h2 class='form-title'>Log in</h2>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Enter you email", class: 'form-input'%>
          </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: "Enter password", class: 'form-input' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class: 'signup-btn mt-3 mb-4'%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </section>
</div>
