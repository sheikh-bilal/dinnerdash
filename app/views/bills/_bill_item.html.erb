<h1 class='text-center pt-4 mb-4'>Order Items</h1>
  <div class='container'>
    <div class='row'>
      <% @order_items.each do |item| %>

        <div class='col-lg-4 col-md-6 mt-2 mb-4'>
        <div class='card'>
          <%= image_tag item.item.image.url(:thumb), class: 'card-image img-crop'%>
          <div class='card-body'>
            <h4 class='card-title'><%= link_to item.item.title, item_path(item.item) %></h4>
            <p class='card-text'><%= item.item.desc %></p>
            <p class="card-subtitle mb-2 text-muted">
              <% if item.item.categories.any? %>
              <b>Categories: </b><%= render item.item.categories %>
              <%end%>
            </p>
            <div class='buy align-items-center'>
              <div class='row mt-3'>
                <%= form_for item, remote: true do |f| %>
                <%= f.hidden_field :item_id, :value => item.item.id %>
                <%= f.number_field :quantity, :value => item.quantity.to_i , class: 'col-sm-5 text-center ml-2 mr-4 py-1'%>
                <%= button_tag( :class => "btn btn-danger col-sm-5") do %> <i class='fa fa-shopping-cart mr-2'></i>Updated Cart
                <% end %>
              </div>
              <div class='price text-success'>
                <h5 class='mt-3'>Subtotal: <%= item.total %>Rs</h5>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <h3 class='text-center mt-4 mb-4'>Your current card value has a subtotal of: <%= current_order.subtotal %></h3>
</div>
