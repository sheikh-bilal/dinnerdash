<h1 class='text-center pt-4 mb-4'>Food Menu Items</h1>
<div class='container'>
<div class='row'>
<% @items.each_slice(3) do |item| %>
    <% item.each do |items| %>
      <div class='col-lg-4 col-md-6 mt-2 mb-4'>
        <div class='card'>
        <%= image_tag items.image.url, class: 'card-image img-crop'%>
        <div class='card-body'>
          <h4 class='card-title'><%= link_to items.title, item_path(items) %></h4>
          <p class='card-text'><%= items.desc %></p>
          <p class="card-subtitle mb-2 text-muted">
            <% if items.categories.any? %>
              <b>Categories: </b><%= render items.categories %>
            <%end%>
          </p>
          <div><span class='fa fa-star checked'></span>
            <span class='fa fa-star checked'></span>
            <span class='fa fa-star checked'></span>
            <span class='fa fa-star-o'></span>
            <span class='fa fa-star-o'></span>
          </div>
          <div class='buy d-flex justify-content-between align-items-center'>
            <div class='price text-success'><h5 class='mt-4'><%= items.price %>Rs</h5></div>
             <a href='#' class='btn btn-danger mt-3'><i class='fa fa-shopping-cart mr-1'></i> Add to Cart</a>
          </div>
        </div>
      </div>
      </div>
    <% end %>
<% end %>
</div>
</div>
