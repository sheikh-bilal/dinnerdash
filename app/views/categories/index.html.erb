<h1 class='text-center pt-4 mb-4'>Food Categories</h1>
<% @categories.each do |category| %>
  <div class=' container card bg-light p-3 col-sm-4 col-sm-offset-2 mt-2 mb-2 text-center' width='18rem'>
    <h3><%= "#{category.name}" %></h3><hr>
    <div class="item-actions text-center">
      <%= link_to 'Update ', edit_category_path(category), class:"btn btn-xs btn-primary" %>
      <%= link_to 'Delete ', category_path(category), method: :delete,
                                            data: {confirm: "Are You sure? you want to delete item?"},
                                            class: "btn btn-xs btn-danger" %>
    </div>
  </div>
<%end%>
<p class='mb-5'></p>
